<div class="mx-auto child col-10 col-md-8 mt-5">
  <div class="sign-in-form d-flex">
    <div class="signin-image col-6">
    </div>
    <div class="form col-12 col-md-6">
    <h2 class="text-center p-3">Se connecter</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" },
                        label: 'Mot de passe' %>
            <%= f.input :remember_me, label: 'Se rappeler de moi ', as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se connecter", class: 'btn btn-primary w-100 mb-3' %>
          </div>
        <% end %>
    </div>
  </div>
</div>


