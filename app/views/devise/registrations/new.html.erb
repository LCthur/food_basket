<div class="container col-10 col-md-8">
  <div class="sign-up-form d-flex mb-5">
    <div class="signup-image col-6">
    </div>
    <div class="form col-12 col-md-6">
      <h2 class="text-center p-3 signup-title">Créer un compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="full-name">
          <%= f.input :prenom,
                    required: true,
                    autofocus: true %>
          <%= f.input :nom,
                    required: true %>
        </div>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} charactères minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    label: 'Mot de passe' %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    label: 'Confirmation du mot de passe' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", value: 'Créer le compte', class: "mb-3 w-100 btn btn-primary text-center" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

